" ================== keys mapping =================
let mapleader = ","

inoremap <silent> jj <Esc>

nnoremap <F5> :set spell!<CR>
nnoremap <silent> <C-e> 4<C-e>
nnoremap <silent> <C-y> 4<C-y>

" Map <leader>y in visual mode to copy via OSC 52
xnoremap <silent> <leader>y :<C-u>call CopyOSC52()<CR>

function! CopyOSC52()
  " Yank visually selected text to the unnamed register
  normal! ""y

  " Get the yanked text
  let l:text = getreg('"')
  let l:text_escaped = shellescape(l:text, 1)
  let l:base64_part = '$(echo ' . l:text_escaped . ' | base64 | tr -d "\n")'
  let l:osc52_prefix = "printf '\033]52;c;"
  let l:osc52_suffix = "\a'"
  let l:cmd = l:osc52_prefix . l:base64_part . l:osc52_suffix
  echom l:cmd
" call system(l:cmd)
endfunction

function! ShortenPath(path, depth)
  let parts = split(a:path, '/')
  let total_len = len(parts)
  return '../' . join(parts[(total_len - a:depth):], '/')
endfunction

inoremap <silent><expr> <TAB>
      \ coc#pum#visible() ? coc#pum#next(1) :
      \ CheckBackspace() ? "\<Tab>" :
      \ coc#refresh()
inoremap <expr><S-TAB> coc#pum#visible() ? coc#pum#prev(1) : "\<C-h>"


